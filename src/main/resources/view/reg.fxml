<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.sysalmacenfx.control.ReenController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0">
            <children>
                <Label text="Registro de Reencauche">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>

                    <!-- Nombre del Curso -->
                    <Label text="Medida             " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="medida" promptText="Ingrese la medida" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Nivel del Curso -->
                    <Label text="Tipo de Banda" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="Tipbanda" promptText="Ingrese el tipo de banda" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- Duración del Curso -->
                    <Label text="Fecha :" GridPane.columnIndex="0" GridPane.rowIndex="2" />

                    <!-- Costo del Curso -->
                    <Label text="Costo:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="Costo" promptText="Ingrese el costo" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <!-- Botones de Acción -->
                    <HBox alignment="CENTER" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="4">
                        <Button onAction="#guardarSer" text="Guardar" />
                        <Button onAction="#cancelarSer" text="Cancelar" />
                    </HBox>

                    <!-- Etiqueta para mostrar mensajes -->
                    <Label fx:id="lbnMsg" alignment="CENTER" text="" GridPane.columnSpan="2" GridPane.rowIndex="5" />
               <DatePicker fx:id="fecha" promptText="Ingrese la fecha" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <!-- Tabla de Cursos de Idioma -->
                <TableView fx:id="tableViewReen" prefHeight="200.0" prefWidth="683.0">
                    <columns>
                        <TableColumn fx:id="colmedida" prefWidth="150.0" text="Medida" />
                        <TableColumn fx:id="colbanda" prefWidth="100.0" text="Tipo de Banda" />
                        <TableColumn fx:id="colfecha" prefWidth="100.0" text="Fecha" />
                        <TableColumn fx:id="colCosto" prefWidth="100.0" text="Costo" />
                        <TableColumn fx:id="colAccion" prefWidth="150.0" text="Acción" /> <!-- Columna de acciones para Editar y Eliminar -->
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
